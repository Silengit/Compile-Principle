struct Operands
{
    int o1;
    int o2;
};

int swap(struct Operands temp)
{
    int i = read(), g = i, res = 0;
    if(temp.o1 == 1){
        while(g > 0){
            res = res + g;
            g = g - 1;
        }
        write(res);
        g = i;
        res = 1;
        while(g > 0){
            res = res * g;
            g = g - 1;
        }
        write(res);
    }
    else if(temp.o2 == 2){
        write(temp.o2 + temp.o1);
    }
    return res;
}

int main()
{
    struct Operands a;
    a.o1 = read();
    a.o2 = read();
    swap(a);
    return 0;
}